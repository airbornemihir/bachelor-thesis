<<grammar_types.ml>>=
type clock = {clockname:string}
type comparator = Lt | Le | Eq | Ge | Gt
type proposition = True | False | Comparison of string*comparator*int | And of proposition list
type transition = {condition: proposition; clockresets: clock array; nextlocation: int}
type location = {locationindex:int; invariant:proposition; departures: transition array}
type timedautomaton = {numlocations: int; numtrans: int; numclocks: int; numinit: int; clocks: clock array; locations: location array}
