<<calc.ml>>=
  (* File calc.ml *)
let _ =
  try
    let lexbuf = Lexing.from_channel stdin in
    while true do
      let result = Timed_automaton_parser.main Timed_automaton_lexer.token lexbuf in
      print_int (result.Grammar_types.numlocations);
      print_newline();
      print_int (result.Grammar_types.numtrans);
      print_newline();
      print_int (result.Grammar_types.numclocks);
      print_newline();
      flush stdout
    done
  with Timed_automaton_lexer.Eof ->
    exit 0
